{
  "name": "farm",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "client.js",
  "bin": "client.js",
  "scripts": {
    "start": "node client.js",
    "frontend:install": "pnpm -C frontend install",
    "frontend:build": "pnpm -C frontend build",
    "build:release": "pnpm frontend:build && pkg . --no-bytecode --targets node18-win-x64,node18-linux-x64,node18-macos-x64,node18-macos-arm64 --out-path dist",
    "build:win": "pnpm frontend:build && pkg . --no-bytecode --targets node18-win-x64 --out-path dist",
    "build:linux": "pnpm frontend:build && pkg . --no-bytecode --targets node18-linux-x64 --out-path dist",
    "build:mac": "pnpm frontend:build && pkg . --no-bytecode --targets node18-macos-x64,node18-macos-arm64 --out-path dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.21.0",
    "long": "^5.3.2",
    "protobufjs": "^8.0.0",
    "pushoo": "^0.1.11",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "frontend/dist/**/*",
      "gameConfig/**/*",
      "proto/**/*",
      "share.txt"
    ]
  }
}
